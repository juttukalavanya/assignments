#include<stdio.h>
 
int main() {
 
   int r;
   float PI = 3.14, a, ci;
 
   printf("\nEnter radius of circle: ");
  
   scanf("%d", &r);
 
   a = PI * r * r;
  
   ci = 2 * PI * r;

   printf("\nArea of circle : %f ", a);
 
   printf("\nCircumference : %f ", ci);
 
   return (0);
}

output

Enter radius of circle: 12
Area of circle : 452.160004 
Circumference : 75.360001 
